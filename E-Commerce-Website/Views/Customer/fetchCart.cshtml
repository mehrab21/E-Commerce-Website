
@{
    ViewData["Title"] = "fetchCart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model List<Cart>
<div class="container-fluid px-4">
	<h2 class="mt-4 text-center text-uppercase" style="letter-spacing:4px">
		Cart Details
	</h2>
</div>
<div class="row">
	<div class="col-md-12">

		<table class="table table-bordered table-striped text-center mt-2">
			<thead>
				<tr>

					<th>Product Name</th>
					<th>Customer Name</th>
					<th>Product Quantity</th>
					
				</tr>
			</thead>
			<tbody>
				@foreach (var cat in Model)
				{
					<tr>

						<td>@cat.products.Product_Name</td>
						<td>@cat.customers.Customer_Name</td>
						<td>@cat.Product_Quantity</td>
						
					</tr>
				}
			</tbody>
		</table>

	</div>
</div>
