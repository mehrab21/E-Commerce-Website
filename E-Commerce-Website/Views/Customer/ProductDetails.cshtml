
@{
    ViewData["Title"] = "ProductDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<Product>
<div class="container">
    <h2>Product Details</h2>
    <div class="row mt-3">
        @foreach (var pro in Model)
        {
            <div class="col-md-5">
                <img src="@("~/Product_Images/"+pro.Product_Image)" asp-append-version=true height="400px" width="400px"/>
            </div>
            <div class="col-md-1"></div>
            <div class="col-md-5">
                <h3> Product Name: @pro.Product_Name</h3>
                <h3>Product Price: @pro.Product_Price</h3>
				<h3>Product Description: @pro.Product_Description</h3>
                <a class="btn btn-warning">Add to Card</a>
                <a class="btn btn-primary">Buy Now</a>
            </div>
        }
    </div>
</div>


