
<div class="container-fluid px-4">
	<h2 class="mt-4 text-center text-uppercase btn btn-danger" style="letter-spacing:4px">
		Are you sure you want to delete this category?
	</h2>
</div>
<div class="row">
	<div class="col-md-2"></div>
	<div class="col-md-8">
		<ul class="list-group">
			<li class="list-group-item">Category Id: @Model.Category_Id</li>
			<li class="list-group-item">Category Name: @Model.Category_Name</li>
		</ul>
		<a href="@Url.Action("DeleteCategory","Admin",new{id=Model.Category_Id})" class="btn btn-danger">Delete Category</a>
		<a asp-controller="Admin" asp-action="fetchCategory" class="btn btn-primary">Back To Fetch Category</a>

	</div>
	<div class="col-md-2"></div>
</div>