@model Feedback
<div class="container-fluid px-4">
	<h2 class="mt-4 text-center text-uppercase btn btn-danger" style="letter-spacing:4px">
		Are you sure you want to delete this feedback?
	</h2>
</div>
<div class="row">
	<div class="col-md-2"></div>
	<div class="col-md-8">
		<ul class="list-group">
			<li class="list-group-item">Feedback Id: @Model.Feedback_Id</li>
			<li class="list-group-item">Feedback Name: @Model.user_name</li>
			<li class="list-group-item">Feedback Message: @Model.user_message</li>
		</ul>
		<a href="@Url.Action("DeleteFeedback","Admin",new{id=Model.Feedback_Id})" class="btn btn-danger">Delete feedback</a>
		<a asp-controller="Admin" asp-action="feedback" class="btn btn-primary">Back To Fetch feedback</a>

	</div>
	<div class="col-md-2"></div>
</div>