@model List<Customer>
<div class="container-fluid px-4">
	<h2 class="mt-4 text-center text-uppercase" style="letter-spacing:4px">
		all customer
	</h2>
</div>
<div class="row">
	<div class="col-md-12">
		<table class="table table-bordered table-striped text-center mt-2">
			<thead>
				<tr>
					<th>Customer Name</th>
					<th>Customer Phone</th>
					<th>Customer Country</th>
					<th>Customer City</th>
					<th>Customer Address</th>
					<th>Options</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var cat in Model)
				{
					<tr>
						<td>@cat.Customer_Name</td>
						<td>@cat.Customer_Phone</td>
						<td>@cat.Customer_Country</td>
						<td>@cat.Customer_City</td>
						<td>@cat.Customer_Address</td>
						<td>
							<a href="@Url.Action("CustomerDetails","admin",new{id=cat.Customer_Id})" class="btn btn-primary">Details</a>
							<a href="@Url.Action("DeleteParmission","admin",new{id=cat.Customer_Id})" class="btn btn-danger">Delete</a>
							<a href="@Url.Action("CustomerEdit","admin",new{id=@cat.Customer_Id})" class="btn btn-warning">Edit</a>
						</td>
					</tr>
				}
			</tbody>
		</table>

	</div>
</div>