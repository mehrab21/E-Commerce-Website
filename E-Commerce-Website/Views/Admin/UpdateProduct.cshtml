@model Product
<div class="container-fluid px-4">
	<h2 class="mt-4 text-center text-uppercase" style="letter-spacing:4px">
		Update Product
	</h2>
</div>
<div class="row">
	<div class="col-md-2"></div>
	<div class="col-md-8">
		<form method="post">
			<input type="hidden" name="Product_ID" value="@Model.Product_Id"/>
			<input type="text" name="Product_Name" class="form-control my-3" value="@Model.Product_Name" />
			<input type="text" name="Product_Price" value="@Model.Product_Price" class="form-control my-3" />
			<input type="text" name="Product_Description" value="@Model.Product_Description" class="form-control my-3" />
			@Html.Partial("Categorydropdown", ViewData["category"])
			<input type="hidden" name="Product_Image" class="form-control my-3" value="@Model.Product_Image" />
			<input type="submit" value="Update Product" class="btn btn-primary form-control my-3" />
		</form>
		<form method="post" asp-action="ChangeProductImage" enctype="multipart/form-data">
			<input type="hidden" name="Product_ID" value="@Model.Product_Id" />
			<input type="hidden" name="Product_Name" class="form-control my-3" value="@Model.Product_Name" />
			<input type="hidden" name="Product_Price" value="@Model.Product_Price" class="form-control my-3" />
			<input type="hidden" name="Product_Description" value="@Model.Product_Description" class="form-control my-3" />
			<input type="hidden" name="cat_Id" value="@Model.Cat_Id" class="form-control my-3" />
			
			<img src="@("~/Product_Images/"+Model.Product_Image)" asp-append-version="true" width="250px" height="250px" />
			<br />
			<input type="file" name="Product_Image" class="my-2"/>
			<input type="submit" value="Change Product Image" class="form-control my-1 btn btn-primary" />
		</form>
	</div>
</div>