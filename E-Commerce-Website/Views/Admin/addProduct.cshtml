
<div class="container-fluid px-4">
	<h2 class="mt-4 text-center text-uppercase" style="letter-spacing:4px">
		Add New Product
	</h2>
</div>
<div class="row">
	<div class="col-md-2"></div>
	<div class="col-md-8">
		<form method="post" enctype="multipart/form-data">
			<input type="text" name="Product_Name" class="form-control my-3" placeholder="Enter a Name" />
			<input type="text" name="Product_Price" placeholder="Enter a Price" class="form-control my-3"/>
			<input type="text" name="Product_Description" placeholder="Enter a Description" class="form-control my-3" />
			<input type="file" name="Product_Image" class="form-control my-3" />
			@Html.Partial("Categorydropdown", ViewData["category"]);
			<input type="submit" value="Add Product" class="btn btn-primary" />
		</form>
	</div>
</div>