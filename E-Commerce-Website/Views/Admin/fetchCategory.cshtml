@model List<Category>
<div class="container-fluid px-4">
	<h2 class="mt-4 text-center text-uppercase" style="letter-spacing:4px">
		All Category 
	</h2>
</div>
<div class="row">
	<div class="col-md-12">
		<a asp-action="addcategory" asp-controller="admin" class="btn btn-primary">Add New Category</a>
		<table class="table table-bordered table-striped text-center mt-2">
			<thead>
				<tr>
					<th>Category Id</th>
					<th>Category Name</th>
					<th>Options</th>
				</tr>
			</thead>
			<tbody>
				@foreach(var cat in Model)
				{
					<tr>
						<td>@cat.Category_Id</td>
						<td>@cat.Category_Name</td>
						 <td>
							<a href="@Url.Action("DeleteParmissionCategory","admin",new{id=@cat.Category_Id})" class="btn btn-danger">Delete</a>
							<a href="@Url.Action("UpdateCategory","admin",new{id=cat.Category_Id})" class="btn btn-warning">Update</a>
						 </td>
					</tr>
				}
			</tbody>
		</table>

	</div>
</div>