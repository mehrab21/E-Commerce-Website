<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>ECO STORE</title>
    <meta name="keywords" content="HTML5 Template">
    <meta name="description" content="Molla - Bootstrap eCommerce Template">
    <meta name="author" content="p-themes">
    <!-- Favicon -->
    <link rel="apple-touch-icon" sizes="180x180" href="~/website/images/icons/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="~/website/images/icons/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/website/images/icons/favicon-16x16.png">
    <link rel="manifest" href="~/website/images/icons/site.html">
    <link rel="mask-icon" href="~/website/images/icons/safari-pinned-tab.svg" color="#666666">
    <link rel="shortcut icon" href="~/website/images/icons/favicon.ico">
    <meta name="apple-mobile-web-app-title" content="Molla">
    <meta name="application-name" content="Molla">
    <meta name="msapplication-TileColor" content="#cc9966">
    <meta name="msapplication-config" content="~/website/images/icons/browserconfig.xml">
    <meta name="theme-color" content="#ffffff">

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Poppins">
    <link rel="stylesheet" href="~/website/vendor/line-awesome/line-awesome/line-awesome/css/line-awesome.min.css">
    <!-- Plugins CSS File -->
    <link rel="stylesheet" href="~/website/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/website/css/plugins/owl-carousel/owl.carousel.css">
    <link rel="stylesheet" href="~/website/css/plugins/magnific-popup/magnific-popup.css">
    <!-- Main CSS File -->
    <link rel="stylesheet" href="~/website/css/style.css">
    <link rel="stylesheet" href="~/website/css/skins/skin-demo-19.css">
    <link rel="stylesheet" href="~/website/css/demos/demo-19.css">
</head>

<body>
    <div class="page-wrapper">
        <div class="wrap-container">
            <header class="header header-intro-clearance header-3">
                <div class="header-top">
                    <div class="container">
                        <div class="header-left">
                            <a href="tel:#"><i class="icon-phone"></i>Call: 01623976197</a>
                        </div><!-- End .header-left -->

                        <div class="header-right">

                            <ul class="top-menu">
                                <li>
                                    <ul>
                                        @if (string.IsNullOrEmpty(ViewBag.sessioncheck))
                                        {
                                            <li><a asp-action="customerLogin" asp-controller="Customer" >Sign in / Sign up</a></li>
                                        }
                                        else
                                        {
                                            <li><a asp-action="CustomerLogout" asp-controller="Customer" >Logout</a></li>
                                        }
                                    </ul>
                                </li>
                            </ul><!-- End .top-menu -->
                        </div><!-- End .header-right -->

                    </div><!-- End .container -->
                </div><!-- End .header-top -->

                <div class="header-middle">
                    <div class="container">
                        <div class="header-left">
                            <button class="mobile-menu-toggler">
                                <span class="sr-only">Toggle mobile menu</span>
                                <i class="icon-bars"></i>
                            </button>

                            <a asp-action="Index" asp-controller="customer" class="logo">
                                <h3 class="text-light">ECO Store</h3>
                            </a>
                        </div><!-- End .header-left -->

                        <div class="header-center">
                            <div class="header-search header-search-extended header-search-visible d-none d-lg-block">
                                <a href="#" class="search-toggle" role="button"><i class="icon-search"></i></a>
                                <form asp-action="Search" asp-controller="customer" method="get">
                                    <div class="header-search-wrapper search-wrapper-wide">
                                        <label for="q" class="sr-only">Search</label>
                                        <button class="btn btn-primary" type="submit"><i class="icon-search"></i></button>
                                        <input type="search" class="form-control" name="q" id="q" placeholder="Search product ..." required>
                                    </div><!-- End .header-search-wrapper -->
                                </form>
                            </div><!-- End .header-search -->
                        </div>

                        <div class="header-right">
                            <div class="header-dropdown-link">
                                <div class="account">
                                    <a asp-action="CustomerProfile" asp-controller="Customer" title="My account">
                                        <div class="icon">
                                            <i class="icon-user"></i>
                                        </div>
                                        <p>Account</p>
                                    </a>
                                </div><!-- End .compare-dropdown -->


                                <div class="dropdown cart-dropdown">
                                    <a class="dropdown-toggle" asp-action="fetchCart" asp-controller="Customer"  aria-haspopup="true" >
                                        <div class="icon">
                                            <i class="icon-shopping-cart"></i>
                                            <span class="cart-count">2</span>
                                        </div>
                                        <p>Cart</p>
                                    </a>
                                </div><!-- End .cart-dropdown -->
                            </div>
                        </div><!-- End .header-right -->
                    </div><!-- End .container -->
                </div><!-- End .header-middle -->

                <div class="header-bottom sticky-header">
                    <div class="container">
                        <div class="header-center">
                            <nav class="main-nav">
                                <ul class="menu">
                                    <li >
                                        <a asp-action="index" >Home</a>

                                       
                                    </li>
                                    <li>
                                        <a asp-controller="customer" asp-action="AboutUs" >ABOUT US</a>

                                    </li>
                                    <li>
                                        <a asp-action="fetchallproduct" asp-controller="customer" >Product</a>
                                    </li>
                                    <li>
                                        <a href="" class="sf-with-ul">Category</a>
                                        <ul> @Html.Partial("FetchCategoryList", ViewData["category"])</ul>
                                    </li>
                                    <li>
                                        <a asp-action="Feedback" asp-controller="Customer" >Contact Us</a>
                                    </li>
                                </ul><!-- End .menu -->
                            </nav><!-- End .main-nav -->
                        </div><!-- End .header-center --
                    </div><!-- End .container -->
                </div><!-- End .header-bottom -->
            </header><!-- End .header -->
        </div>
        <div class="wrap-container">

            <div class="container">
                <main>
                    @RenderBody()
                </main>
            </div>

            <footer class="footer footer-dark">
                <div class="footer-middle">
                    <div class="container">
                        <div class="row">
                            <div class="col-sm-6 col-lg-3">
                                <div class="widget widget-about">
                                    <h3 class="fw-bold text-light mb-2">ECO Store</h3>
                                    <p>Praesent dapibus, neque id cursus ucibus, tortor neque egestas augue, eu vulputate magna eros eu erat. </p>

                                    <div class="social-icons">
                                        <a href="#" class="social-icon" title="Facebook" target="_blank"><i class="icon-facebook-f"></i></a>
                                        <a href="#" class="social-icon" title="Twitter" target="_blank"><i class="icon-twitter"></i></a>
                                        <a href="#" class="social-icon" title="Instagram" target="_blank"><i class="icon-instagram"></i></a>
                                        <a href="#" class="social-icon" title="Youtube" target="_blank"><i class="icon-youtube"></i></a>
                                       
                                    </div><!-- End .soial-icons -->
                                </div><!-- End .widget about-widget -->
                                
                            </div><!-- End .col-sm-6 col-lg-3 -->
                            <div class="col-sm-6 col-lg-3 offset-lg-6">
                                <div class="text-light text-center p-4">
                                    <h4 class="fw-bold text-light mb-2">Office Address</h4>
                                    <p class="mb-1">1st Floor,Main Road, Dalal Bazar</p>
                                    <p class="mb-2">Dalal bazar, Lakshmipur, Bangladesh</p>
                                    <p class="fw-semibold mb-0">
                                        <span class="text-light">Help Line:</span> 01623976197
                                    </p>
                                </div>
                            </div>


                          

                        </div><!-- End .row -->
                    </div><!-- End .container -->
                </div><!-- End .footer-middle -->

                <div class="footer-bottom">
                    <div class="container">
                        <p class="footer-copyright">Copyright © 2025 ECO Store. All Rights Reserved.</p><!-- End .footer-copyright -->
                        <figure class="footer-payments">
                            <img src="~/website/images/payments.png" alt="Payment methods" width="272" height="20">
                        </figure><!-- End .footer-payments -->
                    </div><!-- End .container -->
                </div><!-- End .footer-bottom -->
            </footer><!-- End .footer -->
        </div><!-- End .wrap-container -->
    </div><!-- End .page-wrapper -->

    <script src="~/website/js/jquery.min.js"></script>
    <script src="~/website/js/bootstrap.bundle.min.js"></script>
    <script src="~/website/js/jquery.hoverIntent.min.js"></script>
    <script src="~/website/js/jquery.waypoints.min.js"></script>
    <script src="~/website/js/superfish.min.js"></script>
    <script src="~/website/js/owl.carousel.min.js"></script>
    <script src="~/website/js/bootstrap-input-spinner.js"></script>
    <script src="~/website/js/jquery.magnific-popup.min.js"></script>
    <!-- Main JS File -->
    <script src="~/website/js/main.js"></script>
    <script src="~/website/js/demos/demo-19.js"></script>
</body>
</html>
